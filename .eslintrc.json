{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "airbnb-typescript/base",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "class-methods-use-this": "off",
      "linebreak-style": 0,
      "no-plusplus": "off",
      "no-console": "warn",
      "max-len": [
        "warn",
        {
          "code": 120
        }
      ],
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "@typescript-eslint/indent": [
        "warn",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "import/prefer-default-export": "off",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    },
    "ignorePatterns": [
      "*config.js"
    ]
  }